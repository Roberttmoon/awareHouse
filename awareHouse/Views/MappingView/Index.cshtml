@model IEnumerable<awareHouse.Models.MappingViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Select Building</h2>

<p>
    @Html.ActionLink("Create New", "CreateBuilding")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.building.buildingName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.building.buildingName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.building.buildingID }) |
                @Html.ActionLink("Details", "BuildingDetail", new { id = item.building.buildingID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.building.buildingID })
            </td>
        </tr>
    }

</table>
