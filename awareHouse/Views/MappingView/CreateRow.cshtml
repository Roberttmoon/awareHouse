@model awareHouse.Models.MappingViewModel

@{
    ViewBag.Title = "CreateRow";
}

<h2>Create</h2>

@using (Html.BeginForm("CreateRow", "MappingView"))
{
    @Html.AntiForgeryToken()

    
    <div class="form-horizontal">
        <h4>Add a row to your building.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Enter the Row number</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.row.rowNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.row.rowNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p>Enter the number of bays in the Row</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.stupidHolderTHingy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stupidHolderTHingy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
