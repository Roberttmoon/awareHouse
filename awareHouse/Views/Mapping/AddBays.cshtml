@model awareHouse.Models.MappingViewModel
@{
    ViewBag.Title = "AddBays";
}

<h2>Add Bays</h2>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        <p>Number of bays in this asile: @Model.row.rowNumber.ToString() </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.row.numberOfBays, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.row.numberOfBays, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}