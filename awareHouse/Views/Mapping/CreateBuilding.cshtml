@model awareHouse.Models.MappingViewModel

@{
    ViewBag.Title = "CreateBuilding";
}

<h2>Make a new building to map</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>enter building details.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Name the building:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.building.buildingName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.building.buildingName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                <p> the number of rows of racking:</p>
                <p>(please note that each face of a path is it's own row)</p>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.countHolder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.building.buildingName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "BuildingDetail")
</div>